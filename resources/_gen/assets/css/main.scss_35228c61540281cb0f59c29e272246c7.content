/** Variabel **/
/*
  Josh's Custom CSS Reset
  https://www.joshwcomeau.com/css/custom-css-reset/
*/
@import url("https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap");
*, *::before, *::after {
  box-sizing: border-box; }

* {
  margin: 0; }

body {
  line-height: 1.5;
  -webkit-font-smoothing: antialiased; }
  body a {
    color: black; }
  body a:visited {
    color: black; }

img, picture, video, canvas, svg {
  display: block;
  max-width: 100%; }

input, button, textarea, select {
  font: inherit; }

p, h1, h2, h3, h4, h5, h6 {
  overflow-wrap: break-word; }

p {
  text-wrap: pretty; }

h1, h2, h3, h4, h5, h6 {
  text-wrap: balance; }

#root, #__next {
  isolation: isolate; }

.video-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
  padding: 10px; }

@media (min-width: 768px) {
  .video-list {
    grid-template-columns: repeat(4, 1fr); } }

@-webkit-keyframes fadeInUp {
  0% {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0); }
  100% {
    opacity: 1;
    -webkit-transform: none;
    transform: none; } }

@keyframes fadeInUp {
  0% {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0); }
  100% {
    opacity: 1;
    -webkit-transform: none;
    transform: none; } }

@-webkit-keyframes fadeIn {
  0% {
    opacity: 0; }
  100% {
    opacity: 1; } }

@keyframes fadeIn {
  0% {
    opacity: 0; }
  100% {
    opacity: 1; } }

@-webkit-keyframes slideInLeft {
  0% {
    -webkit-transform: translateX(-100%);
    transform: translateX(-100%);
    visibility: visible; }
  100% {
    -webkit-transform: translateX(0);
    transform: translateX(0); } }

@keyframes slideInLeft {
  0% {
    -webkit-transform: translateX(-100%);
    transform: translateX(-100%);
    visibility: visible; }
  100% {
    -webkit-transform: translateX(0);
    transform: translateX(0); } }

main {
  -webkit-animation-name: fadeIn;
  animation-name: fadeIn;
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both; }

body {
  font-family: "Roboto Mono", monospace; }

a {
  text-decoration: none; }

/** Header **/
.header {
  background-color: #00ff00;
  color: #000;
  padding: 15px;
  text-align: center;
  font-size: 0.5rem;
  font-weight: bold;
  border-bottom: 5px solid #000;
  transition: background-color 0.3s; }
  .header:hover {
    background-color: #33ff33; }

/** Search Bar **/
.search-bar {
  display: flex;
  padding: 10px;
  background-color: #7A1CAC;
  border: 3px solid #000;
  border-width: 3px 0;
  transition: background-color 0.3s; }
  .search-bar:hover {
    background-color: #9923d8; }
  .search-bar input[type="text"] {
    flex: 1;
    padding: 10px;
    font-size: 1rem;
    border: 2px solid #000;
    background-color: #ffb6b1;
    color: #000;
    outline: none;
    transition: background-color 0.3s; }
    .search-bar input[type="text"]:hover {
      background-color: #ffe6e4; }
  .search-bar button {
    padding: 10px;
    font-size: 1rem;
    border: 2px solid #000;
    background-color: #ff0;
    font-weight: bold;
    color: #000;
    cursor: pointer;
    margin-left: 5px;
    transition: background-color 0.3s, transform 0.2s; }
    .search-bar button:hover {
      background-color: #ffff33; }

/** Container **/
.container .flex {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  padding: 0;
  max-width: 1200px;
  margin: 0 auto;
  margin-top: 48px; }

.container .items {
  flex: 1 1 calc(50% - 8px);
  background-color: #f2f2f2;
  border: 2px solid #000;
  box-shadow: 4px 4px 0 black;
  transition: background-color 0.3s, transform 0.2s; }
  .container .items:hover {
    background-color: #ffa; }
  @media (min-width: 768px) {
    .container .items {
      flex: 1 1 calc(25% - 8px); } }
.container .video-link {
  text-decoration: none;
  color: #000; }

.container .video-thumbnail {
  background-color: #ddd;
  color: #000;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 180px;
  border-bottom: 2px solid #000;
  margin-bottom: 8px;
  overflow: hidden;
  transition: transform 0.2s; }

.container .video-thumbnail img {
  width: 100%;
  height: 100%;
  object-fit: cover; }

.container .video-title {
  font-size: 0.8em;
  font-weight: bold;
  margin: 8px 0;
  line-height: 1.5;
  border-bottom: 2px solid #000;
  padding-bottom: 4px;
  transition: color 0.3s;
  text-align: center;
  padding-right: 8px;
  padding-left: 8px;
  padding-bottom: 9px;
  padding-top: 80x; }
  .container .video-title:hover {
    color: #333333; }

.container .download {
  font-size: 18px;
  font-weight: bold;
  margin: 4px 8px;
  text-align: center;
  border: 2px solid black;
  box-shadow: 4px 4px 0 black;
  background-color: #387478;
  transition: background-color 0.3s, transform 0.2s; }
  .container .download a {
    color: white; }
  .container .download:hover {
    background-color: #50a6ac; }

.container .video-details {
  font-size: 0.8em;
  color: black;
  line-height: 1.3;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: center; }
  .container .video-details .categories {
    padding-bottom: 8px;
    margin: auto;
    padding-top: auto; }

.container .video-details ul {
  display: flex;
  list-style: none;
  margin: 0;
  padding-left: 8px;
  padding-top: 0px;
  width: 100%;
  padding-bottom: 8px; }

.container .video-details li {
  box-shadow: var(--box-shadow);
  border: 2px solid black;
  width: auto;
  margin: 8px 0;
  background-color: orange;
  font-weight: bold;
  transition: background-color 0.3s, transform 0.2s; }

.container .video-details li:hover {
  background-color: #ffb733;
  transform: scale(1.05); }

/** Variabel warna brutalism **/
/** Style Tags Brutalism **/
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  list-style: none;
  padding: 8px; }
  .tag-list .tag {
    align-items: center;
    padding: 2px 4px;
    font-size: 0.7rem;
    font-weight: bold;
    color: #000;
    background-color: #00ff00;
    border: 2px solid #000;
    text-transform: capitalize;
    text-align: center;
    box-shadow: 4px 4px 0 black;
    transition: transform 0.1s ease-in-out;
    cursor: pointer; }
    .tag-list .tag:hover {
      background-color: #33ffff;
      box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.3); }

/* Brutalism design for pagination */
.pagination {
  margin-top: 3rem;
  display: flex;
  justify-content: center;
  gap: 8px;
  padding: 12px;
  background-color: #ffdd00;
  /* Bright yellow background */
  border: 4px solid #000;
  /* Thick black border */ }

.pagination a {
  display: inline-block;
  padding: 4px 8px;
  background-color: #f2f2f2;
  /* Light background for buttons */
  color: #000;
  /* Black text color */
  text-decoration: none;
  font-weight: bold;
  border: 2px solid #000;
  /* Thick border */
  box-shadow: 4px 4px 0 #000;
  /* Strong shadow */
  transition: transform 0.1s ease-in-out;
  cursor: pointer; }

.pagination a:hover {
  transform: scale(1.05) rotate(-1deg);
  /* Slight scale and rotation on hover */
  background-color: #00ff00;
  /* Change background to neon green on hover */
  box-shadow: 4px 4px 0 #000;
  /* More prominent shadow on hover */ }

.pagination .pagination-prev,
.pagination .pagination-next {
  background-color: #ff4500;
  /* Bright orange for prev/next buttons */ }

.pagination .pagination-page {
  background-color: #00ffff;
  /* Cyan for numbered pages */ }

/* Search Results Styling */
#search-results {
  display: none;
  position: absolute;
  top: 12rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 9999;
  width: 90%;
  max-width: 800px;
  background: #fff;
  border: 2px solid #000;
  padding: 20px;
  box-shadow: 4px 4px 0px #000; }

#search-results.visible {
  display: block; }

/* Styling for search result items */
#search-results div {
  padding: 4px 0;
  border-bottom: 2px solid #ddd; }

#search-results div:last-child {
  border-bottom: none; }

#search-results a {
  text-decoration: none;
  color: #000;
  font-weight: bold;
  font-size: 18px;
  display: block;
  transition: color 0.3s ease; }

#search-results a:hover {
  color: #ff0000; }

/* No Results Message */
#search-results p {
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  color: #555; }

